{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10,
      "startCommand": "python3.11 manage.py collectstatic --noinput && python3.11 manage.py runserver 0.0.0.0:8000"
    }
  }
  